{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "lib": ["DOM", "ES2020"],
      "types": ["chrome"],
      "moduleResolution": "node",
      "typeRoots": ["node_modules/@types"],
      "outDir": "./dist",
      "strict": true,
      "rootDir": "src"
    },
    "include": [
      "src/**/*"  // Specify the root folder for your TypeScript files
    ],
    "exclude": [
      "node_modules",  // Exclude the node_modules folder
      "dist"           // Exclude the dist folder (or any other build output folder)
    ]
}